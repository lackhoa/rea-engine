;; showing off now that we have arrow type normalization
mulPosv2 :: (a,b: Nat, a_positive: a != 0, b_positive: b != 0) -> a*b != 0
{
 fork a
 {
  0 :
  return fn {return a_positive(_)}
  ,
  ++: ;; goal: (b + a.p * b = 0) -> False
  return fn {
             fork b {0: return b_positive(_),
                     ++:
                     norm(seek(b + a.p * b = 0));
                     ;; seek
                     }
             }
  ,
  }}

