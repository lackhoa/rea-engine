#load "boolean.rea"
#load "nat.rea"

plusIdRight :: (n: Nat) -> n + 0 = n
{
 fork n
 {
  0      : truth,
  s(n69) : rewrite s(n69) + 0 => s(n69 + 0); plusIdRight(n69),
  }
 }

print_debug plusIdRight;

plusSRight :: (n, m: Nat) -> n + s(m) = s(n+m)
{
 fork n
 {
  0    : rewrite 0 + s(m) => s(m); rewrite 0 + m => m; truth,
  s(n1): rewrite s(n1) + s(m) => s(n1 + s(m)); rewrite plusSRight(n1, m);
  rewrite s(n1) + m => s(n1+m); truth,
  }
 }

plusCommutative :: (n, m: Nat) -> (n + m = m + n)
{
 fork n
 {
  0    : rewrite (0 + m) => m; rewrite plusIdRight(m); truth,
  s(n1): rewrite s(n1) + m => s(n1+m); rewrite plusCommutative(n1, m); rewrite plusSRight(m, n1); truth,
  }
 }

